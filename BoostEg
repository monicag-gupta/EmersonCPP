#include <boost/regex.hpp>
#include <iostream>
using namespace std;
using namespace boost;

int main() {
    regex expr("(\\w+)@(\\w+).(\\w+)");
    string email = "test@example.com";
    if (regex_match(email, expr)) {
        cout << "Valid email: " << email<<" !!"<<endl;
    }
    else
        cout << "Invalid email address : " << email << endl;
}






#include <boost/scoped_ptr.hpp>
#include <iostream>
using namespace std;
class Emp {
public:
    Emp() {
        cout << "Emp constructed";
    }
    Emp(int x) {
        cout << "Emp constructed";
    }
    ~Emp() {
        cout << "Emp destructed";
    }
    string display() {
       return "I am an Emp Object";
    }
};
int main() {
    cout << "In scope:";
    {
        boost::scoped_ptr<Emp> p(new Emp());
        cout << endl << p->display() << endl;  // prints display()
        // no delete needed
    }
    cout << ":Out of Scope";
}






