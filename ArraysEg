#include <iostream>
#include <cstring> // for strlen, strcpy, strcat, strcmp
int main() {
    char str1[20] = "Hello";       // declaration
    char str2[] = " World!";       // initialization
    char str3[50];
    // String length
    std::cout << "Length of str1: " << strlen(str1) << "\n";
    // String copy
    strcpy_s(str3, sizeof(str3), str1);
    std::cout << "After copy, str3 = " << str3 << "\n";
    // String concatenation
    strcat_s(str1, sizeof(str1), str2);
    std::cout << "After concatenation, str1 = " << str1 << "\n";
    // String comparison
    if (strcmp(str1, str2) == 0)
        std::cout << "str1 and str2 are equal\n";
    else
        std::cout << "str1 and str2 are NOT equal\n";
    return 0;
}
