#include <iostream>
#include <cstring> // for strlen, strcpy, strcat, strcmp
int main() {
    char str1[20] = "Hello";       // declaration
    char str2[] = " World!";       // initialization
    char str3[50];
    // String length
    std::cout << "Length of str1: " << strlen(str1) << "\n";
    // String copy
    strcpy_s(str3, sizeof(str3), str1);
    std::cout << "After copy, str3 = " << str3 << "\n";
    // String concatenation
    strcat_s(str1, sizeof(str1), str2);
    std::cout << "After concatenation, str1 = " << str1 << "\n";
    // String comparison
    if (strcmp(str1, str2) == 0)
        std::cout << "str1 and str2 are equal\n";
    else
        std::cout << "str1 and str2 are NOT equal\n";
    return 0;
}





#include <iostream>
#include <string> // std::string
int main() {
    std::string s1 = "Hello";
    std::string s2 = " World!";
    std::string s3;    
    s3 = s1 + s2; // Concatenation
    std::cout << "Concatenated string: " << s3 << "\n";   
    std::cout << "Length of s3: " << s3.length() << "\n";  // Length    
    std::cout << "Substring (0,5): " << s3.substr(0, 5) << "\n"; // Substring    
    size_t pos = s3.find("World"); // Find
    if (pos != std::string::npos)
        std::cout << "'World' found at index: " << pos << "\n";    
    s3.replace(6, 5, "Universe"); // Replace
    std::cout << "After replace: " << s3 << "\n";     
    std::cout << "Characters in s3: ";
    for (char c : s3) // Iterate
        std::cout << c << " ";
    std::cout << "\n";
    return 0;
}







